<h3>{{viewTitle}}</h3>

<form action="/form" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{form._id}}">

 <div class="form-group">
        <label>Title</label>
        <input type="text" class="form-control" name="title" placeholder="Title" value="{{form.title}}">
        <div class="text-danger">
            {{form.titleError}}</div>
    </div>

     <div class="form-group">
        <label>Description</label>
        <input type="text" class="form-control" name="description" placeholder="Description" value="{{form.description}}">
        <div class="text-danger">
            {{form.descriptionError}}</div>
    </div>

    <div class="form-group">
        <label>Full Name</label>
        <input type="text" class="form-control" name="fullName" placeholder="Full Name" value="{{form.fullName}}">
        <div class="text-danger">
            {{form.fullNameError}}</div>
    </div>
    <div class="form-group">
        <label>Email</label>
        <input type="text" class="form-control" name="email" placeholder="Email" value="{{form.email}}">
        <div class="text-danger">
            {{form.emailError}}</div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Mobile</label>
            <input type="text" class="form-control" name="mobile" placeholder="Mobile" value="{{form.mobile}}">
        </div>
        <div class="form-group col-md-6">
            <label>City</label>
            <input type="text" class="form-control" name="city" placeholder="City" value="{{form.city}}">
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Submit</button>
        <a class="btn btn-secondary" href="/form/list"><i class="fa fa-list-alt"></i> View All</a>
    </div>
</form>